{% set css %}
{% include "./nav.css" %}
{% endset %}
<style>
  {{css | cssmin |  safe}}
</style>

{% set js %}
{% include "./nav.js" %}
{% endset %}
<script defer>
  {{ js | jsmin | safe }}
</script>

<nav>

  <a href="/" class="nav-home" title="Mustabeen" role="menuitem">
    <span>
      {% include "mustabeen-logo.njk" %}
    </span>
    <span>
        ustabeen
      </span>
  </a>
  <ul class="nav-desktop" role="menu">
    {% for entry in collections.all | eleventyNavigation %}
      <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
        <a
            href="{{ entry.url | url }}"
            role="menuitem"
          >
          {{ entry.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
  <div class="dropdown nav-mobile">
    <button class="nav-dropdown-button" id="dropdown-btn" aria-expanded="false">
      Menu
    </button>
    <ul class="dropdown-menu" id="dropdown-menu">
      {% for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
          <a
          href="{{ entry.url | url }}"
          role="menuitem"
        >
            {{ entry.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>

</nav>